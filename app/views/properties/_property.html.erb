<div class="card" style="width: 18rem; text-align: center" id="<%= dom_id property %>">
  <%= image_tag property.uploads.first.variant(resize_to_fill: [150, nil]), class: "card-img-top", alt: ""  %>
  <div class="card-body">
    <h5 class="card-title">
      <%= link_to property.title, property %>
    </h5>
    <p class="card-text"><%= property.address %></p>
    <p class="card-text">Closes about</p>
    <hr>

    <small>Price: <%= property.price_in_lakhs %> L</small> | <small>Current Bid: <%= property.price_in_lakhs %> L</small>

    <small>Total Aria: <%= property.total_area %> Dismil</small>

    <br>
    <%= link_to "More Information", property, class:"btn btn-primary" %>
  </div>
</div>
