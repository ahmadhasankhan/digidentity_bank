<%= form_with(model: property) do |form| %>
  <% if property.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% property.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_area :address %>
  </div>

  <div>
    <%= form.label :total_area, style: "display: block" %>
    <%= form.text_field :total_area %>
    <small class="form-text text-muted">In Dismil</small>
  </div>

  <div>
    <%= form.label :property_type, style: "display: block" %>
    <%= form.select :property_type, options_for_select(Property.property_types.map {|k, _| [k.humanize.capitalize, k.to_sym]}) %>
  </div>

  <div>
    <%= form.label :nature_of_property, style: "display: block" %>
    <%= form.select :nature_of_property, options_for_select(Property.nature_of_properties.map {|k, _| [k.humanize.capitalize, k.to_sym]}) %>
  </div>

  <div>
    <%= form.label :uploads, style: "display: block" %>
    <%= form.file_field :uploads %>
  </div>

  <div>
    <%= form.label :property_docs, style: "display: block" %>
    <%= form.file_field :property_docs %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
