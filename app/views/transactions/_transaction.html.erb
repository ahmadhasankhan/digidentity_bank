<table class="table table-bordered">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Transaction Number</th>
    <th scope="col">Amount</th>
    <th scope="col">Tax Year</th>
    <th scope="col">Business Type</th>
    <th scope="col">Payment Date</th>
    <th scope="col">Receipt</th>
  </tr>
  </thead>
  <tbody>
  <% transactions.each_with_index do |transaction, i| %>
    <tr>
      <th scope="row"><%= i+1 %></th>
      <td><%= link_to transaction.reference_number, business_transactions_path(@business, transaction) %></td>
      <td><%= transaction.amount %></td>
      <td><%= "#{transaction.from_year} - #{transaction.to_year}" %></td>
      <td><%= transaction.business.business_type.humanize %></td>
      <td><%= transaction.created_at.strftime("%-d/%-m/%y: %H:%M") %></td>
      <td><%= link_to 'Receipt', receipt_business_transaction_path(@business, transaction), class: "btn btn-success btn-sm" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
